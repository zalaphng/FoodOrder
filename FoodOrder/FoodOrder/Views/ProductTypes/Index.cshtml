<@model IEnumerable<FoodOrder.Models.ProductTypes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
    int i = 0;
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="row">
            <div class="col-md-3">
                <h3>Loại Sản Phẩm</h3>
            </div>
            <div class="col-md-6">
                <form class="form-inline pull-left" role="search" action="/ProductTypes/Index" method="GET">
                    <div class="form-group">
                        <label for="name">Search:</label>
                        <div class="input-group">
                            <input type="search" class="form-control" placeholder="Nhập tên loại sản phẩm..." aria-label="Search" name="productTypeName">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">ProductTypes</a></li>
            <li class="active">List</li>
        </ol>


    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Details</h3>
                        <h3 class="text-success">@TempData["SuccessMessage"]</h3>
                        <div class="box-tools pull-right">
                            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                        @{
                            var grid = new WebGrid(source: Model, rowsPerPage: 20);
                        }
                        @grid.GetHtml(
    tableStyle: "custom-table",
    headerStyle: "thead-dark",
    alternatingRowStyle: "even-row",
    footerStyle: "grid-footer",
    columns: grid.Columns(
        grid.Column("STT", format: @<text>@(i++)</text>),
        grid.Column("ProductTypeName","Tên loại sản phẩm"),
        grid.Column("Action", format: @<text>
            @Html.ActionLink("Chỉnh sửa", "Edit", "ProductTypes", new { id = item.id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Chi tiết loại sản phẩm", "Details", "ProductTypes", new { id = item.id }, new { @class = "btn btn-info" })
            <a href="@Url.Action("Delete", "ProductTypes", new { id = item.id })" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa loại sản phẩm này, Sẽ xóa hết toàn bộ sản phẩm có loại này?')">Xóa loại sản phẩm</a>
        </text>)
    )
)

                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section>
</div>