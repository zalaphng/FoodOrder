@model FoodOrder.Models.UserInformationModels

@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .my-btn {
        background-color: green;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
    }
</style>

<h2>@ViewBag.Message</h2>
<main id="main-container" class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-content m-b-40">
                    <h5 class="section-content__title text-center">Thay đổi thông tin</h5>
                </div>
                <h5 class="text-success">@TempData["Message"]</h5>
            </div>
            <div class="col-lg-6 col-12">
                <div class="login-form-container">
                    @using (Html.BeginForm("Edit", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                    <div class="login-register-form">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.UserId)
                        <form>
                            <div class="form-box__single-group">
                                <label for="form-register-username">Họ và tên *</label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-box__single-group">
                                <label for="form-uregister-sername-email">Tài khoản Email *</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-box__single-group m-b-20">
                                <label for="form-register-phonenumber">Địa chỉ *</label>
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-box__single-group m-b-20">
                                <label for="form-register-phonenumber">Số điện thoại *</label>
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            </div>

                            <button class="btn btn--box btn--medium btn--radius btn--black btn--black-hover-green btn--uppercase font--semi-bold" type="submit">Lưu</button>
                        </form>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</main>

