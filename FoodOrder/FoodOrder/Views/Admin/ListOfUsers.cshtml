@model IEnumerable<FoodOrder.Models.Users>

@{
    ViewBag.Title = "ListOfInvoices";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="row">
            <div class="col-md-3">
                <h3>Danh sách khách hàng</h3>
            </div>
            <div class="col-md-6">
                <form class="form-inline pull-left" role="search" action="/Admin/ListOfUsers" method="GET">
                    <div class="form-group">
                        <label for="name">Search:</label>
                        <div class="input-group">
                            <input type="search" class="form-control" placeholder="Nhập tên khách hàng..." aria-label="Search" name="name">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Users</li>
        </ol>
    </section>
    <section class="content">

        <div class="row">
            <div class="col-xs-12">
                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="text-success">@TempData["Message"]</h3>
                        <div class="box-tools pull-right">
                            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table no-margin">
                                @{
                                    var grid = new WebGrid(source: Model, rowsPerPage: 7);
                                }
                                @grid.GetHtml(
                                    @*tableStyle: "table table-bordered table-hover",*@
                                     tableStyle: "custom-table", // Sử dụng lớp CSS custom-table cho bảng
                                    headerStyle: "thead-dark",
                                    @*fillEmptyRows: true,*@
                                    @*mode: WebGridPagerModes.Numeric,*@
                                     footerStyle: "grid-footer",
                                    alternatingRowStyle: "even-row",
                                    columns: grid.Columns(
                                        grid.Column("userid", "Mã khách hàng"),
                                        grid.Column("Name", "Tên khách hàng"),
                                        grid.Column("Email", "Email", format: @<text>
                                                <a href="mailto:@item.Email" class="email-text">@item.Email</a>
                                        </text>),
                                    grid.Column("Address", "Địa chỉ"),
                                    grid.Column("PhoneNumber", "Số điện thoại"),
                                    grid.Column("userid", "Chỉnh sửa", format: @<text>
                                @Html.ActionLink("Cập nhật thông tin", "EditUser", "Admin", new { uid = item.userid }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Thay đổi mật khẩu", "EditUserPassword", "Admin", new { uid = item.userid }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Danh sách hóa đơn", "UserInvoices", "Admin", new { UserID = item.userid }, new { @class = "btn btn-info" })
                                <a href="@Url.Action("DeleteUser", "Admin", new { id = item.userid })" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa khách hàng này \n *Sẽ xóa tất cả hóa đơn của khách hàng này*?')">Xóa Khách hàng</a>
                            </text>)
                 )
             )


                            </table>
                        </div><!-- /.table-responsive -->
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section>
</div>