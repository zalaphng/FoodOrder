@model IEnumerable<FoodOrder.Models.Orders>

@{
    ViewBag.Title = "ListOfOrders";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->

    <section class="content-header">
        <div class="row">
            <div class="col-md-3">
                <h3>Danh sách chi tiết hóa đơn</h3>
            </div>
            <div class="col-md-6">
                <form class="form-inline pull-left" role="search" action="/Admin/ListOfOrders" method="GET">
                    <div class="form-group">
                        <label for="name">Search:</label>
                        <div class="input-group">
                            <input type="search" class="form-control" placeholder="Nhập mã hóa đơn..." aria-label="Search" name="orderId">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Orders</li>
        </ol>
    </section>
    <section class="content">

        <div class="row">
            <div class="col-md-8">
                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Hóa đơn gần đây</h3>
                        <div class="box-tools pull-right">
                            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table no-margin">
                                @{
    var grid = new WebGrid(source: Model, rowsPerPage: 15);
}
@grid.GetHtml(
     tableStyle: "custom-table",
    headerStyle: "thead-dark",
    @*fillEmptyRows: true,*@
      footerStyle: "grid-footer",
    alternatingRowStyle: "even-row",
    columns: grid.Columns(
        grid.Column("FkInvoiceID", "Mã hóa đơn"),
        grid.Column("Products.ProductName", "Tên sản phẩm"),
        grid.Column("Qty", "Số lượng", format: @<text><span class="label label-success">@item.Qty</span></text>),
        grid.Column("Unit_Price", "Giá"),
        grid.Column("Order_Bill", "Tổng số tiền"),
        grid.Column("Order_Date", "Ngày mua")
    )
)

                            </table>
                        </div><!-- /.table-responsive -->
                    </div><!-- /.box-body -->
                    <!--<div class="box-footer clearfix">
                        <h2 class="pull-right">Tổng Chi Tiết Hóa Đơn: @TempData["OrderTotal"]</h2>
                    </div>-->
                    <!-- /.box-footer -->
                </div><!-- /.box -->
            </div>
        </div>
    </section>
</div>